<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://images.unsplash.com/photo-1594909122845-11baa439b7bf?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1500&q=80');">
  <div class="container">
    <h1>MovieList</h1>
    <p>Easily keep track of your favorite movies.</p>
  </div>
</div>

<div class="container my-5">
  <div class="row my-3">
    <div class="col">
       <h1>My Lists</h1>
    </div>
  </div>
  <div class="row">
    <% @lists.each do |list| %>
      <div class="col">
        <%= link_to list_path(list) do  %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= list.image_url %>)">
            <%= list.name %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>


