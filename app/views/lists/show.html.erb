<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= @list.image_url %>');">
  <div class="container">
    <h1><%= @list.name %></h1>
  </div>
</div>

<%= link_to "Add movie", new_list_bookmark_path(@list), class: "btn btn-flat" %>
<div class="container">
  <div class="row">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="col">
        <div class="card" style="width: 18rem;">
          <img src="<%= bookmark.movie.poster_url %>" class="card-img-top" alt="<%= bookmark.movie.title %> movie poster">
          <div class="card-body">
            <h5 class="card-title"><%= bookmark.movie.title %> (<%= bookmark.movie.rating %>/10)</h5>
            <p class="card-text"><%= bookmark.movie.overview %></p>
            <p class="card-text"><em><%= bookmark.comment %></em></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

